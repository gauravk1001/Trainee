
load "circle.rb"

class Sphere<Circle
	@radius
	
	def area(radius)
		area=4*Math::PI*radius*radius
	end
	
	def show
		print "Enter radius for sphere: "
		@radius=gets.to_i
		print "\nType of shape: ", type_of_shape(@radius)
		print "\nRadius: ", @radius
		print "\nPerimeter: ", perimeter(@radius)
		print "\nArea: ", area(@radius)
		puts
	end
	
end
